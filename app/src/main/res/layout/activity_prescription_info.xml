<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_289d23"
    android:orientation="vertical"
    tools:context=".ui.mine.PrescriptionInfoActivity">

    <include layout="@layout/layout_title_transparent_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f4"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/shape_prescription_info_bg"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="@string/prescription_tip_10"
                        android:textColor="@color/color_289d23"
                        android:textSize="@dimen/text_size16" />

                    <TextView
                        android:id="@+id/tv_prescription_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:text="NO.181126121397720"
                        android:textColor="@color/color_289d23"
                        android:textSize="@dimen/text_size16" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_prescription_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="处方:普通"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size14" />

                        <TextView
                            android:id="@+id/tv_prescription_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-06-05"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size14" />

                    </LinearLayout>

                    <View
                        style="@style/user_line_5"
                        android:layout_marginTop="@dimen/dp_4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <!--姓名-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="@string/prescription_tip_12"
                                android:textColor="@color/color_9"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:id="@+id/tv_prescription_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/text_size14" />

                        </LinearLayout>

                        <!--性别-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="@string/prescription_tip_13"
                                android:textColor="@color/color_9"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:id="@+id/tv_prescription_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/text_size14" />

                        </LinearLayout>

                        <!--年龄-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="@string/prescription_tip_14"
                                android:textColor="@color/color_9"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:id="@+id/tv_prescription_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/text_size14" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--科室-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="@string/prescription_tip_15"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size14" />

                        <TextView
                            android:id="@+id/tv_prescription_department"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_3"
                            android:textSize="@dimen/text_size14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/prescription_tip_16"
                        android:textSize="@dimen/text_size14"
                        android:textColor="@color/color_3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/prescription_tip_17"
                        android:textSize="@dimen/text_size14"
                        android:textColor="@color/color_3"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_drug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

                    <!--备注-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="@string/prescription_tip_18"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size14" />

                        <TextView
                            android:id="@+id/tv_prescription_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_3"
                            android:textSize="@dimen/text_size14" />

                    </LinearLayout>

                    <!--处方医师-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="@string/prescription_tip_19"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size14" />

                        <TextView
                            android:id="@+id/tv_prescription_prescribers_are"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_3"
                            android:textSize="@dimen/text_size14" />
                        
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/prescription_details1"/>

                    </LinearLayout>


                </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_prescription_info_bg"
                android:orientation="vertical"
                android:padding="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李医生"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textSize="@dimen/text_size14"
                        android:textColor="@color/color_3"/>

                    <TextView
                        android:id="@+id/tv_doctor_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="153032535225"
                        android:textSize="@dimen/text_size14"
                        android:textColor="@color/color_3"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_doctor_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/text_size14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="广州省广州市荔湾区杂牌路55号"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tip_27"
                        android:textSize="@dimen/text_size14"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/color_9"/>

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/text_size14"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tip_28"
                        android:textSize="@dimen/text_size14"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/color_9"/>

                    <TextView
                        android:id="@+id/tv_pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/text_size14"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tip_29"
                        android:textSize="@dimen/text_size14"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/color_9"/>

                    <TextView
                        android:id="@+id/tv_druy_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/text_size14"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tip_30"
                        android:textSize="@dimen/text_size14"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/color_9"/>

                    <TextView
                        android:id="@+id/tv_pay_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/text_size14"/>


                </LinearLayout>


            </LinearLayout>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/ll_prescription_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height50"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prescription_tip_8"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:maxLines="1"
                    android:text="￥123"
                    android:textColor="@color/color_e22525"
                    android:textSize="@dimen/text_size16" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_289d23"
                android:gravity="center"
                android:text="@string/prescription_tip_9"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size16" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_logistics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height50"
            android:background="@color/color_289d23"
            android:textColor="@color/white"
            android:text="@string/prescription_tip_26"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/text_size16"
            />


    </LinearLayout>


</LinearLayout>
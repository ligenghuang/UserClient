<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.mine.AddAddressActivity">

    <include layout="@layout/layout_title_black_bar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f4"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:orientation="vertical"
               android:paddingLeft="@dimen/dp_10"
               android:paddingRight="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_10">

               <EditText
                   android:id="@+id/et_address_name"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/item_height50"
                   android:hint="@string/address_tip_6"
                   android:textColor="@color/color_3"
                   android:textSize="@dimen/text_size17"
                   android:textColorHint="@color/color_9"
                   android:background="@color/transparent"/>

               <View
                  style="@style/user_line_5"/>


               <EditText
                   android:id="@+id/et_address_phone"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/item_height50"
                   android:hint="@string/address_tip_7"
                   android:textColor="@color/color_3"
                   android:inputType="phone"
                   android:textSize="@dimen/text_size17"
                   android:textColorHint="@color/color_9"
                   android:background="@color/transparent"/>

               <View
                   style="@style/user_line_5"/>

               <TextView
                   android:id="@+id/tv_address_province"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/item_height50"
                   android:hint="@string/address_tip_8"
                   android:gravity="center_vertical"
                   android:textColor="@color/color_3"
                   android:textSize="@dimen/text_size17"
                   android:textColorHint="@color/color_9"
                   android:drawableRight="@drawable/icon_more_right"/>
               <View
                   style="@style/user_line_5"/>

               <EditText
                   android:id="@+id/et_address"
                   android:layout_width="match_parent"
                   android:layout_height="110dp"
                   android:gravity="top"
                   android:paddingTop="@dimen/dp_10"
                   android:hint="@string/address_tip_9"
                   android:textColor="@color/color_3"
                   android:textSize="@dimen/text_size17"
                   android:maxLength="200"
                   android:textColorHint="@color/color_9"
                   android:background="@color/transparent"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size18"
                    android:text="@string/address_tip_10"/>

                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_default"
                    android:layout_width="@dimen/item_height60"
                    android:layout_height="35dp"
                    app:sb_checked_color="@color/color_289d23"
                    app:sb_uncheck_color="@color/color_e"
                    app:sb_show_indicator="false"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_login_btn_bg"
                android:gravity="center"
                android:text="@string/address_tip_11"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size17" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height60"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_portrait"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_item_portrait"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size16" />

        <TextView
            android:id="@+id/tv_item_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_item_name"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size16"

            />

        <TextView
            android:id="@+id/tv_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/inquity_tip_3"
            android:textColor="@color/color_38a234"
            android:textSize="@dimen/text_size16" />


    </RelativeLayout>

    <View style="@style/user_line_2" />

    <TextView
        android:id="@+id/tv_item_inquiry_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/text_size16"
        android:textColor="@color/color_3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_inquiry_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2019-06-20"
            android:layout_weight="1"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size16"/>


        <TextView
            android:id="@+id/tv_item_inquiry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inquity_tip_6"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/color_289d23"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/shape_tv_auth_code_bg"/>


    </LinearLayout>

</LinearLayout>
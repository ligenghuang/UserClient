<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.mine.SettingActivity">

    <include layout="@layout/layout_title_black_bar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/color_f5f6f8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/black"
                    android:text="@string/setting_tip_1"
                    />

                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_message"
                    android:layout_width="@dimen/item_height60"
                    android:layout_height="35dp"
                    app:sb_checked_color="@color/color_289d23"
                    app:sb_uncheck_color="@color/color_e"
                    app:sb_show_indicator="false"/>

            </LinearLayout>

            <View
                style="@style/user_line_2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/black"
                    android:text="@string/setting_tip_2"
                    />

                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_voice"
                    android:layout_width="@dimen/item_height60"
                    android:layout_height="35dp"
                    app:sb_checked_color="@color/color_289d23"
                    app:sb_uncheck_color="@color/color_e"
                    app:sb_show_indicator="false"/>

            </LinearLayout>

            <View
                style="@style/user_line_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/black"
                    android:text="@string/setting_tip_3"
                    />

                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_vibration"
                    android:layout_width="@dimen/item_height60"
                    android:layout_height="35dp"
                    app:sb_checked_color="@color/color_289d23"
                    app:sb_uncheck_color="@color/color_e"
                    app:sb_show_indicator="false"/>

            </LinearLayout>

           <TextView
               android:id="@+id/tv_eliminate_record"
               android:layout_width="match_parent"
               android:layout_height="55dp"
               android:background="@color/white"
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/dp_10"
               android:padding="@dimen/dp_10"
               android:text="@string/setting_tip_4"
               android:textColor="@color/black"
               android:textSize="@dimen/text_size17"
               android:drawableRight="@drawable/icon_more_right"/>

            <View
                style="@style/user_line_2"/>

            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size17"
                    android:text="@string/setting_tip_5"/>

                <TextView
                    android:id="@+id/tv_version_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前版本1.0"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/color_9"
                    android:drawableRight="@drawable/icon_more_right"
                    />


            </LinearLayout>

            <View
                style="@style/user_line_2"/>

            <TextView
                android:id="@+id/tv_terms_of_service"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="@string/setting_tip_6"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size17"
                android:drawableRight="@drawable/icon_more_right"
                />

            <View
                style="@style/user_line_2"/>

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="@string/setting_tip_7"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size17"
                android:drawableRight="@drawable/icon_more_right"/>






        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
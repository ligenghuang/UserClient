<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f5f6f8"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/tv_right_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size15"
            android:layout_alignParentRight="true"
            android:text="昨天23:12"/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/item_height45"
            android:layout_height="@dimen/item_height45"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_right_time"
            android:layout_marginTop="@dimen/dp_4"
            />

        <TextView
            android:id="@+id/tv_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="sddsdsdsdsdsdsd"
            android:background="@drawable/bubble_green"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size17"
            android:layout_toLeftOf="@id/iv_right"
            android:layout_below="@id/tv_right_time"/>
        
        <ImageView
            android:id="@+id/iv_right_content"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/iv_right"
            android:layout_below="@id/tv_right_time"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9"
            android:textSize="@dimen/text_size15"
            android:layout_alignParentLeft="true"
            android:text="昨天23:12"/>

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/item_height45"
            android:layout_height="@dimen/item_height45"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_left_time"
            android:layout_marginTop="@dimen/dp_4"
            />

        <TextView
            android:id="@+id/tv_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="sddsdsdsdsdsdsd"
            android:background="@drawable/bubble_white"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size17"
            android:layout_toRightOf="@id/iv_left"
            android:layout_below="@id/tv_left_time"/>

        <ImageView
            android:id="@+id/iv_left_content"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_left"
            android:layout_below="@id/tv_left_time"/>


    </RelativeLayout>

</LinearLayout>
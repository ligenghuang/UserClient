<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/shape_home_bg"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_doctor_img"
            android:layout_width="@dimen/item_height60"
            android:layout_height="@dimen/item_height60"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/seek4" />

        <TextView
            android:id="@+id/tv_item_doctor_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size16"
            android:text="医师" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_item_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zeng"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_item_doctor_prescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_289d23"
                android:textSize="@dimen/text_size13"
                android:background="@drawable/shape_title_bg_y"
                android:padding="@dimen/dp_4"
                android:text="@string/search_doctor_tip_10"/>

            <TextView
                android:id="@+id/tv_item_doctor_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="122"
                android:gravity="right"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_e22525"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RatingBar
                android:id="@+id/star_rb"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:numStars="5"
                android:rating="0" />

            <TextView
                android:id="@+id/tv_star_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size15" />


            <TextView
                android:id="@+id/tv_item_doctor_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/color_9"
                android:textSize="@dimen/text_size15"
                android:text="广州中医院大学附属医院"/>


        </LinearLayout>

        <View
            style="@style/user_line_5"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_9"
                android:text="@string/search_doctor_tip_12"/>

            <TextView
                android:id="@+id/tv_item_doctor_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123222222222222"
                android:textSize="@dimen/text_size15"
                android:textColor="@color/color_3"
                android:maxLines="1"
                android:ellipsize="end"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
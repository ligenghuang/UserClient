<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/item_height70"
         android:layout_marginBottom="@dimen/dp_10"
         android:paddingLeft="@dimen/dp_10"
         android:paddingTop="@dimen/dp_10"
         android:layout_weight="2.5"
         android:orientation="vertical">

         <TextView
             android:id="@+id/tv_item_address_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/text_size17"
             android:maxLines="1"
             android:ellipsize="end"
             android:textColor="@color/black"
             android:text="查小里"/>

         <TextView
             android:id="@+id/tv_item_address_default"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/text_size14"
             android:textColor="@color/color_e22525"
             android:paddingLeft="6dp"
             android:paddingTop="2dp"
             android:paddingRight="6dp"
             android:paddingBottom="2dp"
             android:layout_marginTop="@dimen/dp_10"
             android:background="@drawable/shape_red_tv_hollow_bg"
             android:text="@string/address_tip_3"/>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_weight="1"
         android:layout_height="@dimen/item_height70"
         android:paddingLeft="@dimen/dp_10"
         android:paddingTop="@dimen/dp_10"
         android:paddingRight="@dimen/dp_10"
         android:layout_marginBottom="@dimen/dp_10"
         android:orientation="vertical">

         <TextView
             android:id="@+id/tv_item_address_phone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/black"
             android:textSize="@dimen/text_size17"
             android:maxLines="1"
             android:ellipsize="end"
             android:text="12316541654"/>

         <TextView
             android:id="@+id/tv_item_address"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/text_size17"
             android:textColor="@color/color_9"
             android:layout_marginTop="@dimen/dp_10"
             android:maxLines="1"
             android:ellipsize="end"
             android:text="北京市东城区dfgsfgsdfsdf"/>


     </LinearLayout>

     <ImageView
         android:id="@+id/iv_item"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:paddingRight="@dimen/dp_10"
         android:src="@drawable/prescription_template1"
         />

 </LinearLayout>


    <View
        style="@style/user_line_4"/>


</LinearLayout>
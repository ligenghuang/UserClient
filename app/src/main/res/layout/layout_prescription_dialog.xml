<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/shape_user_info_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_prescription_n"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height50"
            android:gravity="center"
            android:text="@string/doctor_certified_tip_13"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size17" />

        <View style="@style/user_line_2" />

        <TextView
            android:id="@+id/tv_prescription_y"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height50"
            android:gravity="center"
            android:text="@string/doctor_certified_tip_14"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size17" />


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_druy"
        android:layout_width="90dp"
        android:layout_height="90dp"
        />

    <TextView
        android:id="@+id/tv_item_druy_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_druy"
        android:layout_marginLeft="@dimen/dp_10"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/text_size15"
        android:textColor="@color/color_3"
        />

    <TextView
        android:id="@+id/tv_item_druy_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_druy"
        android:layout_alignBottom="@id/iv_item_druy"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/text_size15"
        android:textColor="@color/color_3"
        />

    <TextView
        android:id="@+id/tv_item_druy_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_item_druy"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/text_size15"
        android:textColor="@color/color_3"
        android:text="X1"
        />

    <TextView
        android:id="@+id/tv_item_druy_spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_druy"
        android:layout_above="@id/tv_item_druy_money"
        android:layout_marginLeft="@dimen/dp_10"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/dp_4"
        android:textSize="@dimen/text_size15"
        android:textColor="@color/color_9"
        android:paddingLeft="@dimen/dp_4"
        android:background="@drawable/shape_et_bg"
        />

</RelativeLayout>
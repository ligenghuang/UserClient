<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_doctor_tip_5"
            android:textSize="@dimen/text_size16"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/sb_1"
            android:layout_width="@dimen/item_height60"
            android:layout_height="35dp"
            app:sb_checked_color="@color/color_289d23"
            app:sb_uncheck_color="@color/color_e"
            app:sb_show_indicator="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_doctor_tip_6"
            android:textSize="@dimen/text_size16"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/sb_2"
            android:layout_width="@dimen/item_height60"
            android:layout_height="35dp"
            app:sb_checked_color="@color/color_289d23"
            app:sb_uncheck_color="@color/color_e"
            app:sb_show_indicator="false"/>

    </LinearLayout>

    <View
       style="@style/user_line_5"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_doctor_tip_7"
        android:textSize="@dimen/text_size16"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/color_9"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_doctor_tip_8"
        android:textSize="@dimen/text_size16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/color_9"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_login_btn_bg"
        android:gravity="center"
        android:text="@string/search_doctor_tip_9"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size17" />


</LinearLayout>